---
interface Props {
    label: string;
    name: string;
    placeholder: string;
}

const {label, name, placeholder} = Astro.props

---

<div class="input-group">
    <label for={name}>{label}</label>
    <input
        placeholder={placeholder}
        name={name}
    />
</div>

<style>
.input-group{
    display: flex;
    flex-direction: column;
    width: 80%;
    gap: 6px;
    margin: 12px;
}
.input-group input {
    background: transparent;
    border-width: 1px;
    border-color: #2B2E69;
    border-radius: 6px;
    color: #5157B8;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    padding: 12px 56px 12px 12px;
}

</style>
