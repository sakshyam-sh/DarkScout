---
import AuthLayout from "../layouts/AuthLayout.astro"
import Input from "../components/Input.astro"
import Button from "../components/Button.astro"
---

<AuthLayout heading="Wecome Back" secondaryText="Sign in to continue to DarkScout">
    <form class="sign-in">
        <Input label="Email" placeholder="Email" name="Email"/>
        <Input label="Password" placeholder="Password" name="Password"/>
        <div class="checkbox-container">
            <label>
                <input type="checkbox" name="remember" />
                Remember me
            </label>
            <a href="/forgot-password" class="forgot-password">Forgot password?</a>
        </div>
        <Button name="Sign In"/>
        <span>Don't have an account?  <a>SignUp</a></span>
    </form>
</AuthLayout>

<style>
.sign-in {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 16px;
}

.checkbox-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 80%;
    margin-top: 8px;
    padding: 0 12px;
}

.checkbox-container label {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #5157B8;
    font-size: 14px;
    font-weight: 400;
    cursor: pointer;
}

.checkbox-container input[type="checkbox"] {
    accent-color: #5B21B6;
    width: 16px;
    height: 16px;
}

.checkbox-container .forgot-password {
    color: #5157B8;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    cursor: pointer;
}

.checkbox-container .forgot-password:hover {
    text-decoration: underline;
}

</style>
