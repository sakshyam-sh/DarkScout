---
import AuthLayout from "../layouts/AuthLayout.astro"
import Input from "../components/Input.astro"
import Button from "../components/Button.astro"
---

<AuthLayout
    heading="Forgot your password?"
    secondaryText="Reset your DarkScout account password now."
    boxWidth="479px"
    boxHeight="402px"
    showVector={true}
    showTermsText={true}
>
    <form class="forgot-password">
        <Input label="Email" placeholder="Email" name="Email"/>
        <Button name="Reset Password"/>
    </form>
</AuthLayout>

<style>

.forgot-password{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 12px;
    margin-top: 14px;
}

</style>
