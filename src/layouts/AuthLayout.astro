---
import Layout from './Layout.astro';
import { Image } from 'astro:assets';
import Vector from  "../assets/Vector.svg"

interface Props {
    heading: string;
    secondaryText: string;
}
const {heading, secondaryText} = Astro.props
---

<Layout title="auth">
    <div class="auth-container">
        <div class="auth-box">
            <div class="top-items">
                <Image src={Vector} alt="DarkScout" loading="eager"/>
                <div class="top-text">
                    <h2>{heading}</h2>
                    <p>{secondaryText}</p>
                </div>
            </div>
            <slot />
        </div>
    </div>
</Layout>

<style>

*{
    padding: 0px;
    margin: 0px;
}

/* background */
html {
    background: #0f172a;
    position: relative;
    min-height: 100vh;
    overflow: hidden;
}

html::after,
html::before {
    content: '';
    position: absolute;
    width: 1019px;
    height: 810px;
    background: #5B21B6;
    opacity: 0.25;
    filter: blur(140px);
    transform: rotate(-180deg);
    z-index: -1;
}

html::before {
    top: -243px;
    right: -102px;
}

html::after {
    bottom: -243px;
    left: -102px;
}

/*authentication container*/
.auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
}

.auth-box {
    width: 479px;
    min-height: 598px;
    padding: 48px 0 0 0;
    position: relative;
    border-radius: 16px;
    gap: 48px;
    display: flex;
    flex-direction: column;

    background:
        linear-gradient(0deg, rgba(24, 26, 59, 0.6), rgba(24, 26, 59, 0.6)),
        radial-gradient(
            289.26% 154.71% at -4.8% -34.79%,
            rgba(91, 33, 182, 0.16) 0%,
            rgba(0, 0, 0, 0.104) 53%,
            rgba(91, 33, 182, 0.16) 100%
        );

    box-shadow: 0px -1px 21px -7px #442F8E;
}

.auth-box::after {
    content: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #2B2E69;
}

.top-items {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
}

.top-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
}

.top-text h2{
    font-weight: 600;
    font-size: 24px;
    line-height: 32px;
}

.top-text p{
    font-weight: 400;
    font-size: 14px;
    line-height: 14px;
}

</style>
